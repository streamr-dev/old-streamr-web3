    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start",
            "program": "${workspaceFolder}/bin/www",
            "env": {
                "ETHEREUM_SERVER_URL": "http://localhost:8546",
                "PORT": "3001"
            }
        }, {
            "type": "node",
            "request": "launch",
            "name": "Test current file",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": [
                "${file}"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }, {
            "type": "node",
            "request": "launch",
            "name": "Test all",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}